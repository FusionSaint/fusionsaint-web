<header class="sticky top-0 z-50 border-b border-white/10 backdrop-blur bg-white/80 dark:bg-dark/70">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/favicon.svg" class="h-8 w-8" alt="FusionSaint logo" />
      <span class="font-mono font-bold tracking-wide">FusionSaint</span>
    </a>
    <nav class="flex items-center gap-6">
      <a href="/games/" class="hover:underline">Games</a>
      <a href="/movies/" class="hover:underline">Movies</a>
      <a href="/updates/" class="hover:underline">Updates</a>
      <a href="https://requests.fusionsaint.com" class="btn btn-primary">Requests</a>
      <button id="theme" class="ml-2 px-3 py-2 rounded-brand border border-white/10" aria-label="Toggle theme">ðŸŒ“</button>
    </nav>
  </div>
  <script>
    const el = document.documentElement;
    const saved = localStorage.getItem('theme');
    if (saved === 'dark') el.classList.add('dark');
    document.getElementById('theme').addEventListener('click', () => {
      const isDark = el.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  </script>
</header>
